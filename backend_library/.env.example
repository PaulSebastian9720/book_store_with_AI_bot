# PostgreSQL (debe coincidir con docker-compose.yml)
DATABASE_URL=postgresql+asyncpg://bookstore:bookstore123@localhost:5432/bookstore
DATABASE_URL_SYNC=postgresql://bookstore:bookstore123@localhost:5432/bookstore

# Neo4j (debe coincidir con docker-compose.yml)
NEO4J_URI=bolt://localhost:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=neo4jpassword

# ── LLM Provider ────────────────────────────────────────────────────────
# Cambiar entre "openai" y "ollama":
LLM_PROVIDER=ollama

# OpenAI — descomentar y poner tu key si usas openai
# LLM_PROVIDER=openai
# OPENAI_API_KEY=sk-tu-api-key-aqui
OPENAI_MODEL=gpt-4o-mini

# Ollama — local, sin API key (debe estar corriendo: ollama serve)
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=mistral:7b-instruct-q4_K_M

# Embeddings
EMBEDDING_MODEL_NAME=all-MiniLM-L6-v2
SIMILARITY_THRESHOLD=0.39
